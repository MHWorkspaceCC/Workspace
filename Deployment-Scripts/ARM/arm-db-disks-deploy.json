{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string",
      "defaultValue": "sb",
      "allowedValues": [
        "sb",
        "dv",
        "qa",
        "pd"
      ],
      "metadata": {
        "description": "The envirnoment: Sandbox (sb), Dev (dv), QA (qa), Prod (qa)"
      }
    },
    "facility": {
      "type": "string",
      "defaultValue": "pr",
      "allowedValues": [
        "pr",
        "dr"
      ],
      "metadata": {
        "description": "The location: 'pr' == westus, 'dr' == eastus"
      }
    }
  },

  "variables": {
    "location": "[if(equals(parameters('facility'), 'pr'), 'westus', 'eastus')]",
    "environmentFacility": "[concat(parameters('environment'), parameters('facility'))]",
    "baseName": "[concat('-ws', variables('environmentFacility'))]",

    "dataDiskName": "[concat('data1-sql1-db', variables('baseName'))]"
  },

  "resources": [
    {
      "type": "Microsoft.Compute/disks",
      "name": "[variables('dataDiskName')]",
      "apiVersion": "2017-03-30",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard_LRS"
      },
      "properties": {
        "creationData": {
          "createOption": "Empty"
        },
        "diskSizeGB": 32
      }
    },
  ],

  "outputs": {
  }
}
